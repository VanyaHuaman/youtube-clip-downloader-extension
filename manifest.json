{
  "manifest_version": 3,
  "name": "YouTube Clip Downloader",
  "version": "1.0",
  "description": "Download YouTube clips directly from the browser",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
